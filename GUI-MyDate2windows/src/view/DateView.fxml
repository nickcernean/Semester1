<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="284.0" prefWidth="408.0" userData="Set Date" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.SetDateController">
    <children>
        <HBox alignment="CENTER" prefHeight="48.0" prefWidth="600.0">
            <children>
                <Label text="Date:" textFill="#ca17c4">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
            </children>
        </HBox>
        <Pane prefHeight="200.0" prefWidth="502.0">
            <children>
                <Label layoutX="54.0" layoutY="39.0" text="Day">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <TextField fx:id="dayField" layoutX="101.0" layoutY="39.0" prefHeight="39.0" prefWidth="84.0">
                    <font>
                        <Font size="18.0" />
                    </font>
                </TextField>
                <TextField fx:id="monthField" layoutX="101.0" layoutY="83.0" prefHeight="39.0" prefWidth="84.0">
                    <font>
                        <Font size="18.0" />
                    </font>
                </TextField>
                <TextField fx:id="yearField" layoutX="101.0" layoutY="127.0" prefHeight="39.0" prefWidth="84.0">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <padding>
                        <Insets top="5.0" />
                    </padding>
                </TextField>
                <Label layoutX="24.0" layoutY="83.0" text="Month">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <Label layoutX="51.0" layoutY="129.0" text="Year">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <Button layoutX="227.0" layoutY="39.0" mnemonicParsing="false" onAction="#showButton" text="Show">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
                <Button layoutX="227.0" layoutY="83.0" mnemonicParsing="false" onAction="#stepForwardButton" text="StepForward">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
            <Button onAction="#setDateButton" layoutX="227.0" layoutY="127.0" mnemonicParsing="false" text="Set">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            </children>
        </Pane>
        <Label fx:id="errorLabel" alignment="BOTTOM_LEFT" contentDisplay="CENTER" text="Error label" textFill="#e50f0f">
            <font>
                <Font size="18.0" />
            </font>
            <VBox.margin>
                <Insets left="10.0" />
            </VBox.margin>
        </Label>
    </children>
</VBox>
