<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox prefHeight="350.0" prefWidth="427.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.AddGradeViewController">
    <children>
        <Pane prefHeight="306.0" prefWidth="381.0">
            <children>
                <Label layoutX="14.0" layoutY="14.0" text="Add a grade">
                    <font>
                        <Font size="36.0" />
                    </font>
                </Label>
                <Label layoutX="59.0" layoutY="84.0" text="Course">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <Label layoutX="69.0" layoutY="139.0" text="Grade">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <TextField fx:id="courseTextField" layoutX="159.0" layoutY="82.0" prefHeight="39.0" prefWidth="115.0">
                    <font>
                        <Font size="18.0" />
                    </font>
                </TextField>
                <TextField fx:id="gradeTextField" layoutX="159.0" layoutY="137.0" prefHeight="39.0" prefWidth="115.0">
                    <font>
                        <Font size="18.0" />
                    </font>
                </TextField>
                <Button onAction="#addGradeSubmitButton" layoutX="92.0" layoutY="212.0" mnemonicParsing="false" text="Submit">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
                <Button onAction="#addGradeCancelButton" layoutX="248.0" layoutY="212.0" mnemonicParsing="false" text="Cancel">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
                <Label fx:id="errorLabel" layoutX="41.0" layoutY="265.0" text="Illegal grade:" textFill="#f01111">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
            </children>
        </Pane>
    </children>
</VBox>
